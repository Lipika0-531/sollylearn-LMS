@page
@model SollyLearn.UI.Pages.TechStackAdminModel
@{
    ViewData["Title"] = "TechStackAdmin";
}


<div class="container p-3 background-container">
    <div class="row pt-4">
        <div class="col-6">
            
        </div>
        <div class="col-6 d-flex justify-content-end ">
            <button type="button" class="btn btn-primary btn-animated" data-toggle="modal" data-target="#techStackModal">
                Create new techstack
            </button>
        </div>
    </div>

</div>


<div class="row background-container">

    @foreach (var techStack in Model.TechStacks)
    {
        <div class="col-md-4 mb-4">
            <div class="card tech-card">
                <img src="@techStack.TechStackImageURL" class="card-img-top" alt="@techStack.Name">
                <div class="card-body">
                    <h5 class="card-title">@techStack.Name</h5>
                    <p class="card-text">@techStack.Description</p>
                </div>
                <div class="card-footer " style="text-align: center;">
                    <button class="btn btn-primary btn-animated" onclick="navigateToVideos('@techStack.Id')">Learn More</button>
                    <button type="button" class="btn btn-success btn-animated" data-toggle="modal" data-target="#techStackModal">
                      Update
                    </button>
                    <button type="button" class="btn btn-danger btn-animated" data-toggle="modal" data-target="#deleteTechStackModal">
                        Delete
                    </button>
                </div> 
            </div>
        </div>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="techStackModal" tabindex="-1" role="dialog" aria-labelledby="techStackModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="techStackModalLabel" style="position: absolute; left: 0; top: 0;"></h4>
            </div>
            <div class="modal-body">
                <form id="techStackForm">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" class="form-control" id="imageUrl" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveTechStackBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete TechStack Modal -->
<div class="modal fade" id="deleteTechStackModal" tabindex="-1" role="dialog" aria-labelledby="deleteTechStackModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title float-left" id="deleteTechStackModalLabel" style="position: absolute; left: 1; top: 1;">Confirm Delete</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this TechStack?</p>
               @*  <p><strong>Name:</strong> <span id="deleteTechStackName"></span></p>
                <p><strong>Description:</strong> <span id="deleteTechStackDescription"></span></p>
                <p><strong>Image URL:</strong> <span id="deleteTechStackImageUrl"></span></p> *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    function navigateToVideos(techStackId) {
        window.location.href = `/Video/TechStack/${techStackId}`;
    }
</script>