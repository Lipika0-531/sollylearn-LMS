@page
@model SollyLearn.UI.Pages.AuthenticationModel
@{
    ViewData["Title"] = "Authentication";
}

@* <div class="auth-container"> *@
<div id="auth-container" class="auth-container">
    <!-- FORM SECTION -->
    <div class="row-container">
        <!-- SIGN UP -->
        <div class="col-container align-items-center flex-col sign-up">
            <div class="form-wrapper align-items-center">
                <div class="form-container sign-up">
                        <div class="input-group">
                            <i class='bx bxs-user'></i>
                            <input type="text" placeholder="Username"  required>
                        </div>
                        <div class="input-group">
                            <i class='bx bx-mail-send'></i>
                            <input type="email" placeholder="Email" required>
                        </div>
                        <div class="input-group">
                            <i class='bx bxs-lock-alt'></i>
                            <input type="password" placeholder="Password"  required>
                        </div>
                        <div class="input-group">
                            <i class='bx bxs-lock-alt'></i>
                            <input type="password" placeholder="Confirm password" name="ConfirmPassword">
                        </div>
                        <button>
                            Sign up
                        </button>
                    <p>
                        <span>
                            Already have an account?
                        </span>
                        <b onclick="toggle()" class="pointer">
                            Sign in here
                        </b>
                    </p>
                </div>
            </div>

        </div>
        <!-- END SIGN UP -->
        <!-- SIGN IN -->
        <div class="col-container align-items-center flex-col sign-in">
            <div class="form-wrapper align-items-center">
                <div class="form-container sign-in">
                    <div class="input-group">
                        <i class='bx bxs-user'></i>
                        <input type="text" placeholder="Username">
                    </div>
                    <div class="input-group">
                        <i class='bx bxs-lock-alt'></i>
                        <input type="password" placeholder="Password">
                    </div>
                    <button>
                        Sign in
                    </button>
                    <p>
                        <b>
                            Forgot password?
                        </b>
                    </p>
                    <p>
                        <span>
                            Don't have an account?
                        </span>
                        <b onclick="toggle()" class="pointer">
                            Sign up here
                        </b>
                    </p>
                </div>
            </div>
            <div class="form-wrapper">
            </div>
        </div>
        <!-- END SIGN IN -->
    </div>
    <!-- END FORM SECTION -->
    <!-- CONTENT SECTION -->
    <div class="row-container content-row">
        <!-- SIGN IN CONTENT -->
        <div class="col-container align-items-center flex-col">
            <div class="text-container sign-in">
                <h2>
                    Welcome
                </h2>

            </div>
            <div class="img-container sign-in">
            </div>
        </div>
        <!-- END SIGN IN CONTENT -->
        <!-- SIGN UP CONTENT -->
        <div class="col-container align-items-center flex-col">
            <div class="img-container sign-up">
            </div>
            <div class="text-container sign-up">
                <h2>
                    Join with us
                </h2>

            </div>
        </div>
        <!-- END SIGN UP CONTENT -->
    </div>
    <!-- END CONTENT SECTION -->
</div>
@* //</div> *@
